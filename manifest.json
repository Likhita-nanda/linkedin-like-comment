{
  "manifest_version": 3,
  "name": "LinkedIn Auto Liker & Commenter",
  "version": "1.0",
  "description": "Automatically likes and comments on LinkedIn posts.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
